<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <DocumentationFile>bin\Debug\net8.0\AliasVault.xml</DocumentationFile>
      <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DocumentationFile>bin\Release\net8.0\AliasVault.xml</DocumentationFile>
      <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\AliasGenerators\AliasGenerators.csproj" />
      <ProjectReference Include="..\Databases\AliasServerDb\AliasServerDb.csproj" />
      <ProjectReference Include="..\Utilities\FaviconExtractor\FaviconExtractor.csproj" />
    </ItemGroup>

    <ItemGroup>
      <AdditionalFiles Include="Main\Layout\MainLayout.razor" />
      <AdditionalFiles Include="Main\Layout\NavMenu.razor" />
      <AdditionalFiles Include="Main\Layout\TopMenu.razor" />
      <AdditionalFiles Include="Main\Pages\Error.razor" />
      <AdditionalFiles Include="Main\Pages\Home.razor" />
      <AdditionalFiles Include="Main\Components\AlertMessageError.razor" />
      <AdditionalFiles Include="Main\Components\AlertMessageSuccess.razor" />
      <AdditionalFiles Include="Main\Components\Breadcrumb.razor" />
      <AdditionalFiles Include="Main\Components\FullPageLoadingAnimation.razor" />
      <AdditionalFiles Include="Main\Components\PageTitleAppend.razor" />
      <Content Include="..\..\LICENSE.md">
        <Link>LICENSE.md</Link>
      </Content>
      <AdditionalFiles Include="..\stylecop.json" Link="stylecop.json" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="8.0.6">
          <PrivateAssets>all</PrivateAssets>
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="StyleCop.Analyzers" Version="1.2.0-beta.556">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
    </ItemGroup>

    <ItemGroup>
      <_ContentIncludedByDefault Remove="Components\Pages\Aliases\AddEdit.razor" />
      <_ContentIncludedByDefault Remove="Components\Pages\Aliases\Alias.razor" />
      <_ContentIncludedByDefault Remove="Components\Pages\Aliases\Delete.razor" />
      <_ContentIncludedByDefault Remove="Components\Pages\Aliases\View.razor" />
      <_ContentIncludedByDefault Remove="Areas\User\Pages\EmailConfirm.cshtml" />
      <_ContentIncludedByDefault Remove="Areas\User\Pages\ForgotPassword.cshtml" />
      <_ContentIncludedByDefault Remove="Areas\User\Pages\Login.cshtml" />
      <_ContentIncludedByDefault Remove="Areas\User\Pages\Logout.cshtml" />
      <_ContentIncludedByDefault Remove="Areas\User\Pages\Register.cshtml" />
      <_ContentIncludedByDefault Remove="Areas\User\Pages\ResetPassword.cshtml" />
      <_ContentIncludedByDefault Remove="Areas\User\Pages\Shared\_Logo.cshtml" />
      <_ContentIncludedByDefault Remove="Areas\User\_IdentityLayout.cshtml" />
      <_ContentIncludedByDefault Remove="Areas\User\_ViewImports.cshtml" />
      <_ContentIncludedByDefault Remove="Areas\User\_ViewStart.cshtml" />
      <_ContentIncludedByDefault Remove="Components\Pages\Error.razor" />
      <_ContentIncludedByDefault Remove="Components\Pages\Home.razor" />
      <_ContentIncludedByDefault Remove="Components\Shared\AlertMessageError.razor" />
      <_ContentIncludedByDefault Remove="Components\Shared\AlertMessageSuccess.razor" />
      <_ContentIncludedByDefault Remove="Components\Shared\Breadcrumb.razor" />
      <_ContentIncludedByDefault Remove="Components\Shared\FullPageLoadingAnimation.razor" />
      <_ContentIncludedByDefault Remove="Components\Shared\PageTitleAppend.razor" />
      <_ContentIncludedByDefault Remove="Components\Layout\MainLayout.razor" />
      <_ContentIncludedByDefault Remove="Components\Layout\NavMenu.razor" />
      <_ContentIncludedByDefault Remove="Components\Layout\TopMenu.razor" />
    </ItemGroup>

</Project>
